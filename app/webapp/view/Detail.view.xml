<mvc:View displayBlock="true" controllerName="ui5.walkthrough.controller.Detail" height="100%"
    xmlns="sap.uxap"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form">

    <ObjectPageLayout id="ObjectPageLayout"
                     showTitleInHeaderContent="true"
                    alwaysShowContentHeader="false"
                    preserveHeaderStateOnScroll="false"
                    headerContentPinnable="true"
                    isChildPage="true"
                    upperCaseAnchorBar="false">
        
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:Title text="{requestModel>request_product}" wrapping="true" class="sapUiSmallMarginEnd"/>
                </expandedHeading>

                <snappedHeading>
                    <m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
                        <m:FlexBox wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
                            <m:Title text="{requestModel>Name}" wrapping="true" class="sapUiTinyMarginEnd"/>
                        </m:FlexBox>
                    </m:FlexBox>
                </snappedHeading>

                <navigationActions>
                    <m:OverflowToolbarButton type="Transparent" icon="sap-icon://decline" press="handleClose" tooltip="Close middle column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
                </navigationActions>

                <actions>
                    <m:Button text="Edit" type="Emphasized" press="toggleAreaPriority"/>
                    <m:Button text="Delete" type="Transparent"/>
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
                <m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
                    <m:Label text="Main Category"/>
                    <m:Text text="{requestModel>MainCategory}"/>
                </m:VBox>
                <m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
                    <m:Label text="Subcategory"/>
                    <m:Text text="{requestModel>Category}"/>
                </m:VBox>
                <m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
                    <m:Label text="Price"/>
                    <m:ObjectNumber number="{requestModel>CurrencyCode} {requestModel>Price}" emphasized="false"/>
                </m:VBox>
            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection title="Product Details">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <form:SimpleForm maxContainerCols="2" editable="false"
                                layout="ResponsiveGridLayout" labelSpanL="12" labelSpanM="12"
                                emptySpanL="0" emptySpanM="0" columnsL="1" columnsM="1">
                                <form:content>
                                    <m:Label text="요청 물품"/>
                                    <m:Text text="{requestModel>request_product}"/>
                                    <m:Label text="Main Category"/>
                                    <m:Text text="{requestModel>MainCategory}"/>
                                    <m:Label text="Subcategory"/>
                                    <m:Text text="{requestModel>Category}"/>
                                    <m:Label text="Currency"/>
                                    <m:Text text="{requestModel>CurrencyCode}"/>
                                    <m:Label text="Price"/>
                                    <m:ObjectNumber number="{requestModel>Price}" emphasized="false"/>
                                </form:content>
                            </form:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>
